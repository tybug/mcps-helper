{
	"manifest_version": 2,
	"name": "mcps-helper",
	"version": "0.2",
	"description": "Color highlights for mcps grading",
	"icons": {
		"128": "images/icon128.png",
		"48": "images/icon48.png",
		"16": "images/icon16.png"
	},

	"browser_action": {
		"default_icon": "images/icon16.png"
	},

	"background": {
    	"scripts": ["background.js"]
  	},

  	"permissions": [
		"webNavigation",
		"*://*/*",
		"tabs"
  	]
}