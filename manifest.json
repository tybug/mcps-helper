{
	"manifest_version": 2,
	"name": "portal+",
	"version": "0.7.0",
	"description": "Enhanced experience with mcps portal",
	"icons": {
		"128": "images/icon128.png",
		"48": "images/icon48.png",
		"16": "images/icon16.png"
	},

	"page_action": {
		"default_popup": "popup.html",
		"default_icon": "images/icon16.png"
	},

	"background": {
    	"scripts": ["background.js"]
  	},

  	"permissions": [
		"*://portal.mcpsmd.org/*",
		"tabs"
  	]
}
